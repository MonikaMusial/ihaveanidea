

<p>
  <strong>Great! You are trying this idea</strong>
</p>
<p>
	Title: <%= @idea.title %>
</p>

<p>
	If you already tried, give your rating:
</p>

<%= form_with(model: @user_idea, local: true) do |form| %>

  <div class="field">
  	<% @user_idea = UserIdea.where(idea_id:params[:id],user_id:current_user).take %>
    <%= if !@user_idea.nil?
           form.text_field :rating, value: @user_idea.rating 
        else
           form.text_field :rating
        end
    %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<%= link_to 'Back', ideas_path %>
